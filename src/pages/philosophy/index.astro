---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { isPublished, sortByDateDesc } from '../../utils/content';
import { withBase } from '../../utils/paths';

const philosophy = (await getCollection('philosophy', isPublished)).sort(sortByDateDesc);
---
<BaseLayout title="Philosophy" description="Conceptual essays on systems, AI, work, and meaning.">
  <header style="max-width:720px; margin:0 0 1.5rem;">
    <h1>Philosophy</h1>
    <p class="muted">Reflective writing grounded in experience. No advice without evidence.</p>
  </header>

  <div class="listing">
    {philosophy.map((item) => (
      <a class="listing-item" href={withBase(`/philosophy/${item.slug}`)}>
        <div class="listing-meta">
          <span>{item.data.date.toLocaleDateString()}</span>
          <span class="divider"></span>
          <span class="badge">Philosophy</span>
        </div>
        <h3>{item.data.title}</h3>
        <p>{item.data.description}</p>
        <div>
          {item.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </a>
    ))}
  </div>
</BaseLayout>
