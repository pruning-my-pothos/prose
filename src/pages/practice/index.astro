---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { isPublished, sortByDateDesc } from '../../utils/content';
import { withBase } from '../../utils/paths';

const practice = (await getCollection('work', isPublished)).sort(sortByDateDesc);
---
<BaseLayout title="Practice" description="Case-based execution narratives with decisions, constraints, and outcomes.">
  <header style="max-width:720px; margin:0 0 1.5rem;">
    <h1>Practice</h1>
    <p class="muted">Examined execution with calm language, clear constraints, and accountable outcomes.</p>
  </header>

  <div class="listing">
    {practice.map((item) => (
      <a class="listing-item" href={withBase(`/practice/${item.slug}`)}>
        <div class="listing-meta">
          <span>{item.data.date.toLocaleDateString()}</span>
          <span class="divider"></span>
          <span class="badge">{item.data.outcome}</span>
        </div>
        <h3>{item.data.title}</h3>
        <p>{item.data.problem}</p>
        <p class="muted" style="margin:0;">Decision focus: {item.data.approach}</p>
      </a>
    ))}
  </div>
</BaseLayout>
