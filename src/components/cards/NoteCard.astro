---
const { slug, title, growthStage, date, id, description } = Astro.props;
import RelativeDate from "../layouts/RelativeDate.astro";
import GrowthIcon from "../layouts/GrowthIcon.astro";
const base = import.meta.env.BASE_URL;
---

<a href={`${base}${slug}`}>
	<div class="note-card">
		{growthStage && <GrowthIcon size="24" growthStage={growthStage} />}
		<div>
			<h3>{title}</h3>
			<p class="description">{description}</p>
			<div class="metadata-container">
				<span>Scratchpad</span>
				<svg width="4px" height="10px">
					<circle r="2" cx="2" cy="2" fill="var(--color-gray-400)"></circle>
				</svg>
				<RelativeDate postDate={date} />
			</div>
		</div>
	</div>
</a>

<style>
	.metadata-container {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		margin-left: var(--space-xs);
		margin-top: 4px;
		font-family: var(--font-sans);
		font-size: var(--font-size-xs);
		color: var(--color-gray-500);
		text-transform: capitalize;
		font-weight: 400;
	}

	.metadata-container svg {
		margin: 0 0.4rem;
	}

	.description {
		font-size: var(--font-size-xs);
		color: var(--color-gray-500);
		font-family: var(--font-sans);
		font-weight: 400;
		margin-left: var(--space-xs);
		margin-top: var(--space-2xs);
		padding-right: var(--space-s);
	}

	.note-card {
		display: flex;
		flex-direction: row;
		padding: var(--space-m);
		margin: 0 var(--space-xs) var(--space-xs) 0;
		border-radius: var(--border-radius-lg);
		border: 1px solid var(--color-tinted-cream);
		box-shadow: var(--box-shadow-md);
		background: linear-gradient(135deg, var(--color-light-cream), var(--color-light-salmon));
		transition: all 0.3s ease-in-out;
		will-change: transform, background-color, box-shadow;
		cursor: pointer;
	}

	.note-card h3 {
		color: var(--color-gray-800);
		transition: color 0.3s ease-in-out;
		will-change: transform;
		font-family: var(--font-body);
		font-size: calc(var(--font-size-base) * 1.04);
		font-weight: 500;
		line-height: var(--leading-snug);
		margin-left: var(--space-xs);
	}

	.note-card svg {
		position: relative;
		top: 4px;
		flex-shrink: 0;
	}

	.note-card:hover {
		transform: translateY(-4px);
		background: color-mix(in srgb, var(--color-light-salmon) 85%, white 15%);
		box-shadow: var(--box-shadow-lg);
		border: 1px solid var(--color-crimson-20);
	}

	.note-card:hover h3 {
		color: var(--color-sea-blue);
	}
</style>
