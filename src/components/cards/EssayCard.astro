---
const { slug, cover, title, growthStage, date, description, id } = Astro.props;
import { Image } from "astro:assets";
import RelativeDate from "../layouts/RelativeDate.astro";
import GrowthIcon from "../layouts/GrowthIcon.astro";
const base = import.meta.env.BASE_URL;
---

<a href={`${base}${slug}`}>
	<div class="essay-card">
		{
			cover && (
				<div class="image-wrapper">
					<Image
						src={cover}
						alt={title}
						width={400}
						height={400}
						loading="eager"
						decoding="async"
					/>
				</div>
			)
		}
		<h3 transition:name={`title-${slug}`}>{title}</h3>
		<p class="description">{description}</p>
		<div class="metadata-container">
			{growthStage && <span>Prose</span>}
			{growthStage && <GrowthIcon size="15" growthStage={growthStage} />}
			<span>
				<RelativeDate postDate={date} />
			</span>
		</div>
	</div>
</a>

<style>
	.image-wrapper {
		position: relative;
		width: 100%;
		aspect-ratio: 1 / 1;
		overflow: hidden;
		border-radius: var(--border-radius-base);
	}

	.image-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		transition: transform 0.3s ease-in-out;
		will-change: transform;
	}

	.metadata-container {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		display: inline-block;
		font-family: var(--font-sans);
		font-size: var(--font-size-xs);
		text-transform: capitalize;
		color: var(--color-gray-600);
		font-weight: 400;
		margin-top: 6px;
	}

	.metadata-container :global(svg) {
		margin: 0 var(--space-2xs);
	}

	.description {
		font-size: var(--font-size-xs);
		color: var(--color-gray-500);
		font-family: var(--font-sans);
		font-weight: 400;
		margin-top: 4px;
	}

	.essay-card {
		display: flex;
		flex-direction: column;
		border: 1px solid var(--color-tinted-cream);
		padding: var(--space-m);
		margin: 0 var(--space-2xs) var(--space-2xs) 0;
		border-radius: var(--border-radius-lg);
		box-shadow: var(--box-shadow-md);
		background: linear-gradient(180deg, var(--color-light-cream) 0%, var(--color-light-salmon) 100%);
		transition: all 0.3s ease-in-out;
		will-change: transform, box-shadow;
		color: var(--color-gray-800);
		cursor: pointer;
	}

	.essay-card img {
		width: 100%;
	}

	.essay-card h3 {
		transition: all 0.3s ease-in-out;
		font-family: var(--font-body);
		font-size: calc(var(--font-size-base) * 1.05);
		font-weight: 500;
		line-height: var(--leading-snug);
		margin: var(--space-2xs) 0;
	}

	.essay-card:hover {
		box-shadow: var(--box-shadow-lg);
		transform: translateY(-4px);
	}

	.essay-card:hover h3 {
		color: var(--color-sea-blue);
	}
</style>
