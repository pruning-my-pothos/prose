---
import { withBase } from '../utils/paths';

interface Props {
  title?: string;
  description?: string;
}

const siteTitle = 'Pruning My Pothos';
const defaultDescription = 'Applied practice, philosophical thinking, and working notes for disciplined experimentation.';
const { title, description } = Astro.props as Props;
const pageTitle = title ? `${title} Â· ${siteTitle}` : siteTitle;
const canonical = import.meta.env.SITE
  ? new URL(Astro.url.pathname, import.meta.env.SITE).toString()
  : Astro.url.pathname;
const imagePath = withBase('/social-card.svg');
const image = import.meta.env.SITE ? new URL(imagePath, import.meta.env.SITE).toString() : imagePath;
const metaDescription = description ?? defaultDescription;
---
<title>{pageTitle}</title>
<meta name="description" content={metaDescription} />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content={metaDescription} />
<meta property="og:type" content="website" />
<meta property="og:url" content={canonical} />
<meta property="og:image" content={image} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={image} />
<link rel="canonical" href={canonical} />
